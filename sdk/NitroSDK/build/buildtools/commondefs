#----------------------------------------------------------------------------
#  LIST OF JUNKS for "make
#

GDIRT_CLEAN	= a.out core *~ *.bak \\\#*\\\# $(GDIRT_CLEAN_DIRS)

GDIRT_CLOBBER	= $(GDIRT_CLOBBER_DIRS)

GDIRT_INSTALLED	= $(addprefix $(INSTALL_DIR)/,$(notdir $(INSTALL_TARGETS)))


